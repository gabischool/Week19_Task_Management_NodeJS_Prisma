// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id          String    @id @default(cuid())
  title       String
  description String
  status      TaskStatus
  priority    Priority
  dueDate     DateTime?
  assignedTo  String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  subtasks    Subtask[]

  @@map("tasks")
}

// Subtask model: links to Task via taskId and cascades on delete
model Subtask {
  id          String   @id @default(cuid())
  title       String
  description String
  completed   Boolean  @default(false)

  // Relation to Task
  taskId      String
  task        Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([taskId])
}

// TODO: Create an enum for the status of the task with the following values (pending, in_progress, completed, cancelled)
enum TaskStatus {
  pending
  in_progress
  completed
  cancelled
}

// Create an enum for the priority of the task with the following values (low, medium, high, urgent)
enum Priority {
  low
  medium
  high
  urgent
}